    listBDS = Model.BDS;

    WebBDS.Models.BDS getBDS(string idBDS)
    {
        WebBDS.Models.BDS x = new WebBDS.Models.BDS();
        foreach (var item in listBDS)
        {
            if (item._id == idBDS)
            {
                x = item;
                break;
            }
        }
        return x;
    }

    WebBDS.Models.User getUser(string id)
    {
        WebBDS.Models.User x = new WebBDS.Models.User();
        foreach (var item in listUser)
        {
            if (item._id == id)
            {
                x = item;
                break;
            }
        }
        return x;
    }

    Boolean checkExist(string idUser)
    {
        bool check = false;
        foreach (var item in listBDSmark)
        {
            if (item.IDuser == idUser)
            {
                check = true;
            }
        }
        return check;
    }
}
